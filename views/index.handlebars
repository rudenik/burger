<div class="container">
    <div class="row">
        <h1>Burger Time</h1>
    </div>
    <div class="row">
        <form id="burger-form">
              <div class="container">
                <div class="row">
                  <div class="col-10">
                    <input class="new-item form-control" placeholder="Create a new burger" type="text" />
                  </div>
                  <div class="col-2">
                    <button type="submit" class="btn btn-success">Add Burger</button>
                  </div>
                </div>
              </div>
            </form>
    </div>
    <div class="row">
        <div class="col-6">
            <h3>Burgers that haven't been eaten</h3>
            <ul>
                {{#each burgers}}
                   
                        {{> burgers/burger-block devoured=false}}
                 
                {{/each}}
            </ul>
        </div>
        <div class="col-6">
            <h3>Burgers that have been devoured</h3>
            <ul>
                {{#each burgers}}
                    {{#if devoured}}
                        {{> burgers/burger-block devoured=true}}
                    {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>
</div>